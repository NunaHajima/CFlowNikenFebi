<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceivList.updatereceiv"
    android:background="@drawable/bgincome">


    <EditText
        android:id="@+id/txt_updatenameReceiv"
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="99dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textPersonName"
        android:textColor="@color/greynorm"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_nominalupdatereceiv"
        android:layout_width="277dp"
        android:layout_height="59dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="372dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:inputType="number"
        android:textColor="@color/greynorm"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_updatenameReceiv" />

    <Button
        android:id="@+id/btn_updatereceiv"
        android:layout_width="143dp"
        android:layout_height="61dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="286dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_medium"
        android:text="Simpan"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nominalupdatereceiv" />
</androidx.constraintlayout.widget.ConstraintLayout>