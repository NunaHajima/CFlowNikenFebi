<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceivList.CreateReceiv"
    android:background="@drawable/bgincome">


    <EditText
        android:id="@+id/txt_namereciv"
        android:layout_width="267dp"
        android:layout_height="61dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Nama Pelanggan"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/greynorm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_nominalreceiv"
        android:layout_width="272dp"
        android:layout_height="54dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="400dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Nominal"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="@color/greynorm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_namereciv"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/btn_createreceiv"
        android:layout_width="140dp"
        android:layout_height="63dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="304dp"
        android:background="@drawable/button_shape"
        android:text="Simpan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_nominalreceiv" />
</androidx.constraintlayout.widget.ConstraintLayout>