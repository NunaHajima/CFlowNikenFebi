<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".OpeningSlide">

    <ImageView
        android:id="@+id/img_opening"
        android:layout_width="324dp"
        android:layout_height="208dp"
        android:src="@drawable/money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/btn_ToLogInOS"
        android:layout_width="281dp"
        android:layout_height="51dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/oranye"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center|center_horizontal"
        android:text="Masuk"
        android:textSize="18dp"
        app:backgroundTint="@color/oranye"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_opening"
        app:layout_constraintVertical_bias="0.271" />

    <Button
        android:id="@+id/btn_registrationOS"
        android:layout_width="287dp"
        android:layout_height="54dp"
        android:background="@drawable/button_shape2"
        android:backgroundTint="@color/greynorm"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center|center_horizontal"
        android:text="DAFTAR"
        android:textSize="18dp"
        app:backgroundTint="@color/greynorm"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ToLogInOS"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/txt_opening"
        android:layout_width="302dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Atur Keuangan Tokomu Sekarang !"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_opening"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>